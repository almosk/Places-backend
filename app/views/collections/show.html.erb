<h1>
  <%= @collection.title %>
</h1>

<p>
  <strong>City:</strong>
  <%= City.find(@collection.city_id).title %>
</p>

<p>
  <strong>User:</strong>
  <%= User.find(@collection.user_id).title %>
</p>


